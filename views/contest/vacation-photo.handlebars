<form class="form-horizontal" role="form" 
		enctype="multipart/form-data" method="POST" action="/contest/vacation-photo/{{year}}/{{month}}">
	<div class="form-group">
		<label for="filedName" class="col-sm-2 control-label">Name</label>
		<div class="col-sm-4">
			<input type="text" class="form-control"
				id="filedName" name="name">
		</div>
	</div>
	<div class="form-group">
		<label for="filedEmail" class="col-sm-2 control-label">Email</label>
		<div class="col-sm-4">
			<input type="email" class="form-control"
				id="filedEmail" name="email" required>
		</div>
	</div>
	<div class="form-group">
		<label for="filedPhoto" class="col-sm-2 control-label">Vacation photo</label>
		<div class="col-sm-4">
			<input type="file" class="form-control"
				id="filedPhoto" name="photo" required 
				accept="image/*">
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-4">
			<button type="submit" class="btn btn-primary">
				Submit
			</button>
		</div>
	</div>
</form>